<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sing-Up</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="/stylesheets/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/stylesheets/css/style.css">
</head>
<body>
    <div class="main">  
        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Create Account</h2>
                        <form method="POST" action="/register01/pressbutton"class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="_rname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="user_name" id="_rname" placeholder="Your Name"/>
                            </div>
                            <div class="form-group">
                                <label for="_remail"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="user_email" id="_remail" placeholder="Your Email"/>
                            </div>
                            <div class="form-group">
                                <label for="_rpass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="user_pass" id="_rpass" placeholder="Password"/>
                            </div>
                            <% if (locals.register_error) { 
                                register_error.forEach(function(error_msg){ %>
                                <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                              <% });
                              } %>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register"/>
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="/singup" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="/javascripts/js/jquery/jquery.min.js"></script>
    <script src="/javascripts/js/main.js"></script>
</body>
</html>